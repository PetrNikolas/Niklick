<!-- Hero-->
<section class="hero has-text-centered">
  <!-- Hero-body -->
  <div class="hero-body">
    <!-- Container -->
    <div class="container">

      <h1 class="title is-1  animated bounceInDown">
        <span>Sign up</span>
      </h1>

    </div>
    <!-- End Container -->
  </div>
  <!-- End Hero-body -->
</section>
<!-- End Section -->


<!-- Section-->
<section class="section is-medium has-text-centered">
  <!-- Container -->
  <div class="container">

    <!-- Columns -->
    <div class="columns is-desktop">

      <!-- Column -->
      <div class="column is-12">

        <!-- Form -->
        <%= form_for(resource, class: "sign_form", as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="field control">
              <%= f.label :email, class: "label" %><br />
              <%= f.email_field :email, autofocus: true, class: "input" %>
            </div>

            <div class="field control">
              <%= f.label :password, class: "label" %>
              <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class: "input" %>
            </div>

            <div class="field control">
              <%= f.label :password_confirmation, class: "label" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "input" %>
            </div>

            <div class="actions">
              <%= f.submit "Sign up", class: "button is-success" %>
            </div>
        <% end %>
        <!-- End Form -->

        <%= render "devise/shared/links" %>

      </div>
      <!-- End Column -->

    </div>
    <!-- End Columns -->

  </div>
  <!-- End Container -->
</section>
<!-- End Section -->
