<!-- Hero-->
<section class="hero has-text-centered">
  <!-- Hero-body -->
  <div class="hero-body">
    <!-- Container -->
    <div class="container">

      <h1 class="title is-1  animated bounceInDown">
        <span>Log in</span>
      </h1>

    </div>
    <!-- End Container -->
  </div>
  <!-- End Hero-body -->
</section>
<!-- End Section -->


<!-- Section-->
<section class="section is-medium has-text-centered">
  <!-- Container -->
  <div class="container">

    <!-- Columns -->
    <div class="columns is-desktop">

      <!-- Column -->
      <div class="column is-12">

        <!-- Form -->
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field control">
              <%= f.label :email, class: "label" %><br />
              <%= f.email_field :email, class: "input", autofocus: true %>
            </div>

            <div class="field control">
              <%= f.label :password, class: "label" %><br />
              <%= f.password_field :password, class: "input", autocomplete: "off" %>
            </div>

            <% if devise_mapping.rememberable? -%>
                <div class="field control">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, class: "label" %>
                </div>
            <% end -%>

            <div class="actions control">
              <%= f.submit "Log in", class: "button is-success" %>
            </div>
        <% end %>
        <!-- End Form -->

        <%= render "devise/shared/links" %>

      </div>
      <!-- End Column -->

    </div>
    <!-- End Columns -->

  </div>
  <!-- End Container -->
</section>
<!-- End Section -->
