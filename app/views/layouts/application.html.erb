<!DOCTYPE html>
<html lang="en">
<head>

  <!-- Generating Meta tags -->
  <%= metamagic %>


  <!-- Static Meta Tags-->
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="author" content="">
  <%= csrf_meta_tags %>


  <!-- OG Meta Tags-->
  <meta property="og:title" content="Nacho">
  <meta property="og:url" content="">
  <meta property="og:image" content="">
  <meta property="og:type" content="website">


  <!-- Apple touch icon -->
  <link rel="apple-touch-icon" href="../../../public/apple-touch-icon-precomposed.png">


  <!-- CSS-->
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => 'true' %>
  <%= stylesheet_link_tag params[:controller] %>
</head>
<body>

  <!-- Nav-->
  <nav class="nav">


    <!-- Container-->
    <div class="container">


      <!-- Nav-left -->
      <div class="nav-left">
        <%= link_to "Nacho", root_path, class: "nav-item is-brand" %>
      </div>


      <!-- Nav-right -->
      <div class="nav-right nav-menu">
        <%= link_to "Home", root_path, class: "nav-item" %>
        <%= link_to "Posts", posts_path, class: "nav-item" %>

        <span class="nav-item">|</span>

        <% if user_signed_in? %>

            <%= link_to "Log Out", destroy_user_session_path, :method => :delete, class: "nav-item" %>

        <% else %>

          <%= link_to "Log In", new_user_session_path, class: "nav-item" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "nav-item" %>

        <% end %>
      </div>


    </div>


  </nav>


  <!-- Main Content-->
  <main>


    <%= yield %>


  </main>


  <!-- JS-->
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'true' %>
  <%= javascript_include_tag params[:controller] %>
</body>
</html>